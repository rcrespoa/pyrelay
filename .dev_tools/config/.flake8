[flake8]
max-line-length = 150
max-complexity = 18

; flake8-colors
format = ${cyan}%(path)s${reset}:${yellow_bold}%(row)d${reset}:${blue_bold}%(col)d${reset}: ${red_bold}%(code)s${reset} %(text)s

; flake8-cognitive-complexity
max-cognitive-complexity = 15

; flake8-functions
max-function-length = 50
max-parameters-amount = 7

; flake8-pytest-style
pytest-fixture-no-parentheses = yes

; select = B,C,E,F,W,T4,B9
ignore = ANN101, ANN003, ANN002, ANN204

exclude=drafts